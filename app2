//COMPONENTES DE tipo CLASE y como cambiar sus estados.

import React,{Component} from 'react'
import { Button } from 'react-native';
import { Text, View} from 'react-native'

export default class App extends Component {
  
  constructor(props){
    super(props);
    this.state = {
      nombre: 'Leila',
      apellido: 'Guzman'
    }
  }

  componentDidMount(){
    //this.saludar()
  }

  changeName = () => {
    this.setState({ nombre: 'lachinis'})
    console.log('Presione el boton')
  }
  
  render() {
    return (
      <View>
        <Text style={ { marginTop:150 }}> Hola {this.state.nombre} { this.state.apellido } </Text>
        <Button title='Cambiar nombre' onPress={()=> this.changeName() } />
      </View>
    )
  }
}


